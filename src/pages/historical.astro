  }

  // Si van a agregar mas estatuas aqui vayan anotandolas asi como las que ya estan anotadas !!
];
---

<SectionLayout title="Historicos">
  <section>
    <aside>
      <h1 class="text-6xl font-black text-center my-6 uppercase">cronicas del malecon</h1>
    </aside>

    <article class="grid grid-cols-2 auto-rows-[53rem] mx-auto my-auto gap-5 p-6">
    {
      statues.map((statue) => (
          <a
            href="/areas"
            class="flex-col relative rounded-3xl z-20 flex items-start justify-end overflow-hidden"
            id="card1"
          >
            <div class="absolute rounded-3xl z-10 bottom-0 top-0 h-full w-full mix-blend-multiply bg-gradient-to-t from-[#5c5d6ec9]"></div>

            <div
              id="carouselImage1"
              class="absolute inset-0 bg-cover h-full w-full -z-10 rounded-3xl bg-blend-luminosity bg-center transition-background-image duration-500"
              style=`background-image: url('/public/statues/${statue.image}')`
            ></div>

            <h2 class="text-[5rem] font-black text-guinda z-20 p-10">
              {statue.title}
            </h2>
          </a>
        ))
      }
      </article>
  </section>
</SectionLayout>

<style>
  h2 {
    font-family: "Komtits";
  }
</style>

<style is:global>
  @font-face {
    font-family: "Komtits";
    src: url("/fonts/KOMTITBR.ttf") format("truetype");
    font-style: normal;
    font-display: swap;
  }
</style>
