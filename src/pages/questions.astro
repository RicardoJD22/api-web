---
import QuestionsLayout from "../layouts/QuestionsLayout.astro"

const question = "¿Cuál es tu lenguaje de programación favorito?"
const option = "JavaScript"

---

<QuestionsLayout title="Encuesta">

    <section class="h-full text-center flex flex-col justify-center">
       
        <h1 class="text-[5rem] font-black">{question}</h1>
        <div class="">
            <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">{option}</button>
        </div>
    </section>

</QuestionsLayout>